//法一：循环死算
class Solution {
public:
    int addDigits(int num) {
        int res;
        while(1){
            res = 0;
            while(num!=0){
                res += num%10;
                num = num/10;
            }
            //cout<<num<<endl;
            if (res < 10)
			{
				return res;
			}
            num = res;
        }
    }
};

